<section id="reports">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="wow bounceIn" data-wow-offset="50" data-wow-delay="0.3s">VIEW <span>REPORT</span></h2>
            </div>

        </div>
        <div class="row mb-5">
            <div class="col-md-12 fadeInUp wow">
                Your <span class="info">Patient number</span> and <span class="info">Case number</span> should be present at the top right of your payment receipt. Please enter those details in the following fields to view your report. This information is needed to keep the record for history. In case you dont find the required information, please contact us at <span style="white-space:nowrap">Mobile: <span class="info">0319 4355590</span></span>. We would be glad to help you out with your need.
            </div>
        </div>
        <div class="row tld-form">
            <div class="col-md-6 col-sm-6 col-xs-12 fadeInLeft" data-wow-offset="50">
              <%= form_with(url: '/view_report', method: 'get') do |f| %>
              <div>
                <%= f.label :patient_id, "Patient ID" %>
                <%= f.text_field :patient_id, autocomplete: "off", class: "form-control", required: true %>

                <%= f.label :case_id, "Case ID" %>
                <%= f.text_field :case_id, autocomplete: "off", type: "text", style: "text-transform:uppercase", class: "form-control", required: true %>

                 <%= submit_tag "VIEW REPORT", class: "form-control" %>
              </div>
              <% end %>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12 wow fadeInRight" data-wow-offset="50" data-wow-delay="0.6s">
                <p class="info">EXAMPLE</p>
                <p>
                    <label>PATIENT NUMBER</label>: XXXXX-YY-ZZ<br />
                    <label>CASE NUMBER</label>: XXXXX-YY-ZZ
                </p>
            </div>
        </div>
    </div>
</section>
