<div class="container-xxl flex-grow-1 container-p-y">
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-4">
        <h5 class="card-header">Search Patient</h5>
        <%= render 'search_form' %>
        <%= render 'search_by_name_and_phone_number' %>
        <%= render 'referrer_search' %>
      </div>
    </div>
  </div>

  <div class="card">
    <h5 class="card-header">Patients Queue</h5>
    <div class="table-responsive text-nowrap">
      <table class="table">
        <thead>
          <tr>
            <th>Patient Name</th>
            <th>Cost</th>
            <th>Status</th>
            <th>Show Page</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">
          <% @patients.each do |patient| %>
            <tr>
              <td>
                <strong><%= patient.name %></strong>
              </td>
              <td><%= patient&.bill %></td>
              <td><span class="badge bg-label-primary me-1">Completed</span></td>
              <td>
                <%= link_to "Show", typist_patient_path(patient), class: 'btn btn-primary' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>