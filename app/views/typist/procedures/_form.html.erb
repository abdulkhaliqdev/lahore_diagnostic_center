<h4 class="fw-bold py-3 mb-4">
  <span class="text-muted fw-light">Referrer /</span> Form
</h4>

<div class="row">
  <div class="col-md-12">
    <div class="card mb-4">
      <h5 class="card-header">Patient</h5>
      <div class="card-body demo-vertical-spacing demo-only-element">
        <%= form_for [:typist, @procedure] do |form| %>

          <div class='mb-3'>
            <%= form.label 'Procedure Type', class: 'form-label' %>
            <%= form.select :procedure_type, options_for_select(Procedure.procedure_types.keys.map { |key| [key.titleize, key] }, params[:procedure_type]), { prompt: 'Select Procedure Type' }, class: "form-select" %>
          </div>


          <div class='mb-3'>
            <%= form.label 'Title', class: 'form-label' %>
            <%= form.text_field :title, required: true, placeholder: 'Title', class: 'form-control' %>
          </div>

          <div class='mb-3'>
            <%= form.label 'Price', class: 'form-label' %>
            <%= form.number_field :price, required: true, placeholder: 'Price', class: 'form-control' %>
          </div>

          <div class="sub-btn my-3 d-flex justify-content-end">
            <%= form.submit class: 'btn btn-success'%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>