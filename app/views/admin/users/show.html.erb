<div class="container-xxl flex-grow-1 container-p-y">
  <button type="button" class="btn p-0 m-3">
    <%= link_to 'Add New Referrer', new_admin_referrer_path, class: 'btn btn-primary'%>
  </button>
  <div class="card">
    <div class='container p-5'>
      <h5><strong>Doctor Name:</strong> <%= @referrer.doctor_name %></h5>
      <h5><strong>Hospital Name:</strong> <%= @referrer.hospital_name %></h5>    
      <%= link_to 'Edit', edit_admin_referrer_path(@referrer.id), class: 'btn btn-primary' %>
      <%= link_to 'Destroy', admin_referrer_path(@referrer.id), method: :destroy, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
