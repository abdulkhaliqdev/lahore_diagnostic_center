<div class="container-xxl flex-grow-1 container-p-y">
  <button type="button" class="btn p-0 m-3">
    <%= link_to 'Add New Procedure', new_admin_procedure_path, class: 'btn btn-primary'%>
  </button>
  <div class="card">
    <h5 class="card-header">Procedures</h5>
    <div class="table-responsive text-nowrap">
      <table class="table">
        <thead>
          <tr>
            <th>Procedure Name</th>
            <th>Type</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">
          <% @procedures.each do |procedure| %>
            <tr>
              <td style="width: 20px;">
                <strong><%= procedure&.title %></strong>
              </td>
              <td>
                <span class="badge bg-label-primary me-1"><%= procedure&.procedure_type %></span>
              </td>
              <td>
                <%= procedure&.price %>
              </td>
              <td>
                <div class="dropdown position-relative">
                  <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                    <div class='btn btn-primary'>menu</div>
                  </button>
                  <div class="dropdown-menu position-absolute">
                    <a class="dropdown-item" href="<%= edit_admin_procedure_path(procedure)%>"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                    <a class="dropdown-item" href="<%= admin_procedure_path(procedure)%>"><i class="bx bx-edit-alt me-1"></i> SHow</a>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= render 'shared/pagination', instance: @procedures %>
  </div>
</div>