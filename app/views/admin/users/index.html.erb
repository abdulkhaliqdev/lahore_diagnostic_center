<div class="container-xxl flex-grow-1 container-p-y">
  <button type="button" class="btn p-0 m-3">
    <%= link_to 'Add New User', new_admin_user_path, class: 'btn btn-primary'%>
  </button>
  <div class="card">
    <h5 class="card-header">Users</h5>
    <div class="table-responsive text-nowrap">
      <table class="table">
        <thead>
          <tr>
            <th>User Name</th>
            <th>Role</th>
            <th>email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">
          <% @users.each do |user| %>
            <tr>
              <td>
                <strong><%= user&.name %></strong>
              </td>
              <td><span class="badge bg-label-primary me-1"><%= user&.role %></span></td>
              <td>
                <strong><%= user&.email %></strong>
              </td>
              <td>
              <div class="dropdown position-relative">
                  <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                    <div class='btn btn-primary'>menu</div>
                  </button>
                  <div class="dropdown-menu position-absolute">
                    <a class="dropdown-item" href="<%= edit_admin_user_url(user) %>"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                    <a class="dropdown-item" href="<%= admin_user_url(user) %>"><i class="bx bx-trash me-1"></i> Show</a>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>