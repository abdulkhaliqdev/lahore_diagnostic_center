<h4 class="fw-bold py-3 mb-4">
  <span class="text-muted fw-light">Referrer /</span> Form
</h4>

<div class="row">
  <div class="col-md-12">
    <div class="card mb-4">
      <h5 class="card-header">Patient</h5>
      <div class="card-body demo-vertical-spacing demo-only-element">
        <%= form_for [:receptionist, @referrer] do |form| %>
          <div class='mb-3'>
            <%= form.label 'Doctor Name', class: 'form-label' %>
            <%= form.text_field :doctor_name, required:true, placeholder: 'Doctor Name', class: 'form-control' %>
          </div>

          <div class='mb-3'>
            <%= form.label 'Hospital Name', class: 'form-label' %>
            <%= form.text_field :hospital_name, required:true, placeholder: 'Hospital Name', class: 'form-control' %>
          </div>

          <div class="sub-btn my-3 d-flex justify-content-end">
            <%= form.submit class: 'btn btn-success'%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>