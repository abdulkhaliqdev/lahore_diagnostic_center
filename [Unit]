[Unit]
Description=Puma HTTP Server
After=network.target

[Service]
Type=simple
User=deploy
WorkingDirectory=/home/deploy/lahore_diagnostic_center
Environment=RAILS_ENV=production
ExecStart=/bin/bash -lc 'cd /home/deploy/lahore_diagnostic_center && /home/deploy/.rvm/gems/ruby-3.2.0/bin/bundle exec rails server -b 0.0.0.0 -p 3000'
Restart=always
KillMode=process

[Install]
WantedBy=multi-user.target