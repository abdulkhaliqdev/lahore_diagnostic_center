<div class="container-xxl flex-grow-1 container-p-y">
  <div class="card">
    <h3 class="card-header px-5">Procedure</h3>
    <div class="table-responsive text-nowrap">
      <div class="d-flex px-5">
        <p><strong>Name: </strong><%= @procedure&.title&.humanize %></p>
      </div>
      <div class="d-flex px-5">
        <p><strong>Test Type: </strong> <%= @procedure&.procedure_type %></p>
      </div>
      <div class="d-flex px-5">
        <p><strong>Price: </strong> <%= @procedure&.price %></p>
      </div>
      <div class="d-flex p-5">
        <%= button_to "Delete Procedure", admin_procedure_path(@procedure), method: :delete, data: { confirm: "Are you sure you want to delete this Procedure?" }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
